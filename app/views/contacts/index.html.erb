<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>お問い合わせ</h1>
      <%= link_to "お問い合わせを入力する", new_contact_path, class: 'btn btn-default' %>
    <% @contacts.each do |contact| %>
    <div class="row">
      <h4><strong><%= contact.title %></strong></h4>
      <p><%= contact.content %></p>
      <%= link_to "編集", edit_contact_path(contact.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", _path(contact.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
