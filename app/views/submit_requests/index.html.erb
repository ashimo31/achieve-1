<p id="notice"><%= notice %></p>

<h1>依頼一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>タスク</th>
      <th>メッセージ</th>
      <th>依頼先</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submit_requests.each do |submit_request| %>
      <tr>
        <td><%= submit_request.user.name %></td>
        <td><%= submit_request.task.title %></td>
        <td><%= submit_request.message %></td>
        <td><%= submit_request.request_user.name %></td>
        <td><%= submit_request.status %></td>
        <td><%= link_to '詳細', submit_request %></td>
        <td><%= link_to '編集', edit_submit_request_path(submit_request) %></td>
        <td><%= link_to '削除', submit_request, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'タスク依頼の新規作成', new_submit_request_path %>
