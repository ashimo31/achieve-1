<p id="notice"><%= notice %></p>

<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>Task</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="normalize.css">
</head>


<h1>タスク一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>締切日</th>
      <th>担当者</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user.name %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline.strftime("%Y年%m月%d日 %H時%M分") %></td>
        <td><%= task.charge.name %></td>
        <td><%= task.status == 1? "対応中" : "未着手" %></td>
        <td><%= if task.done? then "完了" else "未完了" end %></td>
        <td>  <%= link_to 'タスクの詳細へ', user_task_path(task.user, task) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'タスクの登録', new_user_task_path(@user) %>
