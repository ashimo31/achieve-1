<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @task.user.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @task.deadline %>
  <%= task.deadline.strftime("%Y年%m月%d日 %H時%M分") %>
</p>

<p>
  <strong>Charge:</strong>
  <%= @task.charge.name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status == 1? "対応中" : "未着手" %>
</p>



<%= if @task.done? then "完了" else "未完了" end %>

<%= link_to 'Edit', edit_user_task_path(@task.user, @task) %> |
<%= link_to 'Back', user_tasks_path(@task.user) %>
